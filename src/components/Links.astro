---
import { Button } from "@/components/ui/button";
---

<div class="min-h-screen flex items-center justify-center md:justify-start">
  <ul
    class="z-20 flex flex-col space-y-6 md:space-y-10 md:ml-[10%] w-32 md:w-48"
  >
    <li>
      <a
        aria-label="Telegram"
        href="https://t.me/televensi"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Button variant="outline" size="lg" className="group w-full">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
          >
            <path d="M15 10l-4 4l6 6l4 -16l-18 7l4 2l2 6l3 -4"></path>
          </svg>
          Telegram
        </Button>
      </a>
    </li>
    <li>
      <a
        aria-label="YouTube"
        href="https://www.youtube.com/@tsarkqq"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Button variant="outline" size="lg" className="group w-full">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
          >
            <path
              d="M2 8a4 4 0 0 1 4 -4h12a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-12a4 4 0 0 1 -4 -4v-8z"
            ></path>
            <path d="M10 9l5 3l-5 3z"></path>
          </svg>
          YouTube
        </Button>
      </a>
    </li>
    <li>
      <a
        aria-label="Discord"
        href="https://discord.gg/GSQE3gBVF3"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Button variant="outline" size="lg" className="group w-full">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
          >
            <path d="M8 12a1 1 0 1 0 2 0a1 1 0 0 0 -2 0"></path>
            <path d="M14 12a1 1 0 1 0 2 0a1 1 0 0 0 -2 0"></path>
            <path
              d="M15.5 17c0 1 1.5 3 2 3c1.5 0 2.833 -1.667 3.5 -3c.667 -1.667 .5 -5.833 -1.5 -11.5c-1.457 -1.015 -3 -1.34 -4.5 -1.5l-.972 1.923a11.913 11.913 0 0 0 -4.053 0l-.975 -1.923c-1.5 .16 -3.043 .485 -4.5 1.5c-2 5.667 -2.167 9.833 -1.5 11.5c.667 1.333 2 3 3.5 3c.5 0 2 -2 2 -3"
            ></path>
            <path d="M7 16.5c3.5 1 6.5 1 10 0"></path>
          </svg>
          Discord
        </Button>
      </a>
    </li>
    <li>
      <a
        aria-label="Twitch"
        href="https://www.twitch.tv/televensi"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Button variant="outline" size="lg" className="group w-full">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
          >
            <path
              d="M4 5v11a1 1 0 0 0 1 1h2v4l4 -4h5.584c.266 0 .52 -.105 .707 -.293l2.415 -2.414c.187 -.188 .293 -.442 .293 -.708v-8.585a1 1 0 0 0 -1 -1h-14a1 1 0 0 0 -1 1z"
            ></path>
            <path d="M16 8l0 4"></path>
            <path d="M12 8l0 4"></path>
          </svg>
          Twitch
        </Button>
      </a>
    </li>
    <li>
      <a aria-label="Contact" href="/contact">
        <Button variant="outline" size="lg" className="group w-full">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
          >
            <path
              d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6"
            ></path>
            <path d="M11 13l9 -9"></path>
            <path d="M15 4h5v5"></path>
          </svg>
          Contact
        </Button>
      </a>
    </li>
  </ul>
</div>
